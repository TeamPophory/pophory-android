<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Pophory" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pophory_purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pophory_black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/pophory_black</item>
        <item name="colorError">@color/pophory_red</item>
        <!-- Bottom nav bar active indicator color set -->
        <item name="colorSecondaryContainer">@color/pophory_black</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <!-- FAB shape custom -->
        <item name="floatingActionButtonStyle">@style/Widget.Pophory.FloatingActionButton</item>
        <!-- Gray Scale Theme -->
        <item name="colorOnSurface100">@color/pophory_black</item>
        <item name="colorOnSurface50">@color/gray_50</item>
        <item name="colorOnSurface40">@color/gray_40</item>
        <item name="colorOnSurface30">@color/gray_30</item>
        <item name="colorOnSurface20">@color/gray_20</item>
        <item name="colorOnSurface10">@color/gray_10</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Headline -->
        <item name="textAppearanceHeadlineBold">@style/TextAppearance.Pophory.HeadLineBold</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Pophory.HeadLineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Pophory.HeadLineMedium
        </item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Pophory.HeadLineSmall</item>
        <!-- Title -->
        <!-- Modal Title -->
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Pophory.TitleLarge</item>
        <!-- Popup Title -->
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Pophory.TitleMedium</item>
        <!-- General Title -->
        <item name="textAppearanceTitleSmall">@style/TextAppearance.Pophory.TitleSmall</item>
        <!-- Text -->
        <item name="textAppearanceText1">@style/TextAppearance.Pophory.Text1</item>
        <item name="textAppearancePopupText1">@style/TextAppearance.Pophory.PopupText1</item>
        <item name="textAppearanceModalText1">@style/TextAppearance.Pophory.ModalText1</item>
        <!-- Caption -->
        <item name="textAppearanceCaption1">@style/TextAppearance.Pophory.Caption1</item>
        <item name="textAppearanceCaption2">@style/TextAppearance.Pophory.Caption2</item>
        <!-- Button -->
        <item name="textAppearancePopupButton1">@style/TextAppearance.Pophory.PopupButton1</item>
        <item name="textAppearancePopupButton2">@style/TextAppearance.Pophory.PopupButton2</item>
        <!-- For Bottom Navigation -->
        <item name="textAppearanceLabelMedium">@style/TextAppearance.Pophory.LabelMedium</item>
    </style>

    <style name="Theme.Pophory" parent="Base.Theme.Pophory" />

    <style name="Widget.Pophory.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/black</item> <!-- FAB 배경색 -->
        <item name="tint">@color/white</item> <!-- FAB 아이콘 색상 -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Pophory.FAB</item>
    </style>

    <style name="Theme.App.Pophory.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_pophory_main_logo</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.Pophory</item>
    </style>
    <style name="Theme.App.Popopopo.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_pophory_main_logo</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.Pophory</item>
    </style>

    <style name="Theme.App.StartPophory" parent="Theme.Pophory">
        <item name="android:statusBarColor">@color/pophory_purple</item>
    </style>
</resources>