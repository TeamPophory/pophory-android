<resources>
    <!-- Base application theme. -->
    <style name="Theme.Pophory" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pophory_purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/onSurface0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <!-- Bottom nav bar active indicator color set -->
        <item name="colorSecondaryContainer">@color/onSurface100</item>
        <item name="colorOnSecondaryContainer">@color/onSurface0</item>
        <!-- FAB shape custom -->
        <item name="floatingActionButtonStyle">@style/Widget.Pophory.FloatingActionButton</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Pophory.HeadLineLarge</item>
        <item name="textAppearanceHeadlineMedium">
            @style/TextAppearance.Pophory.HeadLineMedium
        </item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Pophory.HeadLineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Pophory.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Pophory.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Pophory.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Pophory.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.Pophory.LabelMedium</item>
    </style>

    <style name="Widget.Pophory.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/black</item> <!-- FAB 배경색 -->
        <item name="tint">@color/white</item> <!-- FAB 아이콘 색상 -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Pophory.FAB</item>
    </style>

    <style name="ShapeAppearanceOverlay.Pophory.FAB" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="Theme.App.Popopopo.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_pophory_main_logo</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.Pophory</item>
    </style>
</resources>