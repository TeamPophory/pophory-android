<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pophory" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pophory_purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/onSurface0</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Bottom nav bar active indicator color set -->
        <item name="colorSecondaryContainer">@color/onSurface100</item>
        <item name="colorOnSecondaryContainer">@color/onSurface0</item>
        <!-- FAB shape custom -->
        <item name="floatingActionButtonStyle">@style/Widget.Pophory.FloatingActionButton</item>
    </style>

    <style name="Widget.Pophory.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?colorPrimary</item> <!-- FAB 배경색 -->
        <item name="tint">?colorOnPrimary</item> <!-- FAB 아이콘 색상 -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Pophory.FAB</item>
    </style>

    <style name="ShapeAppearanceOverlay.Pophory.FAB" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>