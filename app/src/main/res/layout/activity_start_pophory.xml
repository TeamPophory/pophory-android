<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pophory_purple"
    tools:context=".feature.signup.StartPophoryActivity">


    <ImageView
        android:id="@+id/iv_illustration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="86dp"
        android:layout_marginTop="195dp"
        android:background="@color/gray_400"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="포포리 앨범을 만들었어!\n지금 사진을 추가해볼까?"/>

    <TextView
        android:id="@+id/btn_start_pophory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_30dp_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="포포리 시작하기"
        android:gravity="center"
        android:paddingTop="21dp"
        android:paddingBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="22dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>