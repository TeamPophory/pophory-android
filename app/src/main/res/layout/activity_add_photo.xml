<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_add_photo"
            layout="@layout/toolbar"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/layout_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_add_photo">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        tools:src="@drawable/img_background_width" />

                    <ImageView
                        android:id="@+id/img_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginVertical="70dp"
                        app:layout_constraintBottom_toBottomOf="@+id/img_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_vertical"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="80dp"
                        android:layout_marginVertical="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/img_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="gone" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="내 앨범"
                    android:textAppearance="?textAppearanceHeadlineSmall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_image" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_album_cover"
                    android:layout_width="70dp"
                    android:layout_height="95dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_album_cover_collectbook"
                    app:layout_constraintStart_toStartOf="@+id/txt_title"
                    app:layout_constraintTop_toBottomOf="@id/txt_title"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Pophory.RoundedCorners" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_selected"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#4B212222"
                    android:scaleType="center"
                    android:src="@drawable/ic_selected"
                    app:layout_constraintBottom_toBottomOf="@+id/img_album_cover"
                    app:layout_constraintEnd_toEndOf="@+id/img_album_cover"
                    app:layout_constraintStart_toStartOf="@+id/img_album_cover"
                    app:layout_constraintTop_toTopOf="@+id/img_album_cover"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Pophory.RoundedCorners" />


                <TextView
                    android:id="@+id/txt_title_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="사진 찍은 날짜"
                    android:textAppearance="?textAppearanceHeadlineSmall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_album_cover" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_add_photo_date_container"
                    android:paddingVertical="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_title_date">

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?textAppearanceText1"
                        android:textColor="?colorOnSurface100"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="2020.06.06 (금)" />

                    <ImageView
                        android:id="@+id/img_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txt_title_studio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="사진관"
                    android:textAppearance="?textAppearanceHeadlineSmall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_date" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_studio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_add_photo_date_container"
                    android:paddingVertical="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_title_studio">

                    <TextView
                        android:id="@+id/txt_studio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?textAppearanceText1"
                        android:textColor="?colorOnSurface100"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="사진관을 선택해주세요" />

                    <ImageView
                        android:id="@+id/img_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chevron_down"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txt_title_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="함께 찍은 친구"
                    android:textAppearance="?textAppearanceHeadlineSmall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_studio" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_friends"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_add_photo_date_container"
                    android:paddingVertical="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_title_friend">

                    <TextView
                        android:id="@+id/txt_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="열심히 준비중이에요"
                        android:textAppearance="?textAppearanceText1"
                        android:textColor="?colorOnSurface30"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_search"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/bg_round_30dp_black"
                    android:paddingVertical="20dp"
                    android:text="사진 추가하기"
                    android:textAlignment="center"
                    android:textAppearance="?textAppearanceHeadlineSmall"
                    android:textColor="?colorOnSurface"
                    app:layout_constraintTop_toBottomOf="@id/layout_friends" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>